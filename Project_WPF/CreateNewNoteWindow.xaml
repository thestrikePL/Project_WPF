<Window x:Class="Project_WPF.CreateNewNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowa Notatka" Height="300" Width="400">
    <Grid>
        <TextBox Name="TitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Margin="10,10,0,0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox Name="ContentTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="150" Margin="10,50,0,0" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <Button Content="Dodaj Notatkę" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10,0,0,10" Click="AddNote_Click"/>
    </Grid>
</Window>
