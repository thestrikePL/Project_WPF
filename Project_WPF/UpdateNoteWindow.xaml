<Window x:Class="Project_WPF.UpdateNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Note" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Title:" Margin="10"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Margin="10"/>
        <TextBlock Text="Content:" Margin="10,5,10,0" Grid.Row="1"/>
        <TextBox x:Name="ContentTextBox" Grid.Row="1" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Update" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10" Click="Update_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,10" Click="Cancel_Click"/>
    </Grid>
</Window>
