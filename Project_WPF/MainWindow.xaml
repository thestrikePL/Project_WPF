<Window x:Class="Project_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notatki" Height="350" Width="525">
    <Grid>
        <ListBox Name="NotesList" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="500" Margin="10,10,0,0"/>
        <Button Content="Nowa Notatka" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10,0,0,10" Click="CreateNewNote_Click"/>
        <Button Content="Usuń Notatkę" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="120,0,0,10" Click="DeleteNote_Click"/>
        <Button Content="Edytuj Notatkę" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="230,0,0,10" Click="EditNote_Click"/>
    </Grid>
</Window>
